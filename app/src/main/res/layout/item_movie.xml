<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_movie_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/item_movie_width"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:layout_margin="4dp"
    android:padding="0dp"
    android:elevation="6dp"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    ><!--android:translationY="@dimen/item_movie_height"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_movie_height"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.nunez.popularmovies.views.custom_views.LatoTextView
                android:id="@+id/item_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_dark"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:gravity="left"
                app:fontType="Bold"
                tools:text="Spectre" />

            <com.nunez.popularmovies.views.custom_views.LatoTextView
                android:id="@+id/item_movie_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/blue_light"
                android:layout_gravity="bottom"
                android:textSize="12sp"
                android:gravity="left"
                app:fontType="Bold"
                tools:text="Action, Drama" />

            <com.nunez.popularmovies.views.custom_views.LatoTextView
                android:id="@+id/item_movie_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_rating_heart"
                android:drawableStart="@drawable/ic_rating_heart"
                android:drawableTint="@color/gray"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:textColor="@color/gray_dark"
                android:layout_gravity="bottom"
                android:textSize="12sp"
                android:gravity="left|center"
                app:fontType="Regular"
                tools:text="6.9" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/click_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/statelist"/>

</android.support.v7.widget.CardView>